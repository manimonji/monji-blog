---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";

const allPosts = await Astro.glob("./posts/*.md");

const pageTitle = "Monji Blog";
---
<BaseLayout pageTitle={pageTitle}>
	<main>
		<h1 class="text-6xl text-center font-semibold mt-11 mx-8">Monji Blog</h1>
		<section class="flex flex-col mt-9 gap-8">
			{allPosts.map(post => <BlogPost title={post.frontmatter.title} imagePath={post.frontmatter.imagePath} url={post.url} />)}
