<BaseLayout pageTitle={pageTitle}>
	<h1 class="text-6xl text-center font-semibold mt-11 mx-8">Monji Blog</h1>
	<section class="flex flex-col mt-9">
		<article class="border border-black mx-8 p-7 pb-5 rounded-[2rem] shadow-[0.25rem_0.25rem_0] shadow-black">
